/*小窗口*/
#WinLogin{
	display:none;
	z-index:20055;
	width:500px;
	height:180px;
	padding-top:10px;
	font-family:Microsoft Yahei,"微软雅黑";
}
#WinLoginLeft{
	width:300px;
	height:150px;
	float:left;
}
#WinLoginRight{
	padding-top:10px;
	width:180px;
	height:150px;
	float:right;
	text-align:center;
	border-left:1px solid #cccccc;
}
.WLDiv{
	padding:8px 25px;	
}
.WLDiv input[type=text],.WLDiv input[type=password]{
	font-family:Microsoft Yahei,"微软雅黑";
	width:260px;
	height:30px;
	color:#999;
}
.WLDiv input[type=button]{
	font-family:Microsoft Yahei,"微软雅黑";
	height:30px;
	width:60px;
}
#WinLoginRightBtn{
	font-family:Microsoft Yahei,"微软雅黑";
	width:80px;
	height:30px;
	font-size:16px;
}
#passwordtmp{
	display:none;	
}
#errormessage{
	padding-left:30px;
	padding-bottom:4px;
	color:#E96845;
}
#submit{
	font-family:Microsoft Yahei,"微软雅黑";
	width:80px;
	height:40px;
}

/*---------------*/
/*useful from qtip.css*/
.qtip {
    display: none;
    font-size: 10.5px;
    left: -28000px;
    line-height: 12px;
    max-width: 580px;
    min-width: 50px;
    position: absolute;
    top: -28000px;
}
 .ui-tooltip-content {
	background-color: #404040;
	border-color: #666;
	color: #555555;
}
.ui-tooltip-nav{
	max-width: 540px;
}
.ui-tooltip-nav .ui-tooltip-content{
		padding: 0;
		border-width: 0;
}
