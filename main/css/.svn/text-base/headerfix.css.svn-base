/*顶部菜单，属于qtip*/
#headerFix2 {
width: 100%;
position:fixed;
z-index:15050;
top:0;left:0;
_position:absolute;
_top:expression(documentElement.scrollTop + 0 + "px");
_left:expression(documentElement.scrollLeft + 0 + "px");
	background-color:rgba(64,64,64,0.9); 

}
.shadow{
	-moz-box-shadow:1px 1px 3px #555;
	-webkit-box-shadow:1px 1px 3px #555;
	box-shadow:1px 1px 3px #555;
}
#navigation2{
	position: relative;
	border-width: 0 0 1px;
	margin:0 auto;
	padding-left:100px;
	width:700px;

}	
#navigation2,
#navigation2 ul,
#navigation2 a{
	list-style: none outside none;
	border: 0 none;
	border-color: #AAA;
	border-style: solid;
}
#navigation2,.ui-tooltip-nav .ui-tooltip-content{
	font-size: 12px;
	line-height: 15px;
	background-color:rgba(64,64,64,0.9); 

}
#navigation2 ul,
#navigation2 li{
		float: left;
}
#navigation2 li a,#navigation2 li a:visited{
		font-weight:bold;
		text-decoration:none;
}
#navigation2 li .subtitle,.submenu li a{
		display: block;
		padding: 5px 20px 5px 20px;
		border-left-width: 1px;
		color: #FFF;
		text-shadow:1px 1px 1px #000;
		font-weight:bold;
		text-decoration:none;
}
#navigateWOa{
		display: block;
		padding: 5px 20px 5px 20px;
}


#navigation2 li a:hover,
{
	cursor: pointer;
    font-weight: bold;
	text-shadow:none;
}
#navigation2 li .subtitle:hover,.submenu li a:hover{
	background-color: #333;
	cursor: pointer;
    font-weight: bold;
    text-decoration: none;
	text-shadow:none;
}
#navigation2 .submenu,#navigation2 .submenu2{
		display: none;
		border-width: 1px;
}	
#navigation2 .ui-tooltip-nav ul,
#navigation2 .ui-tooltip-nav li{
		float: none;
}
#navigation2 .ui-tooltip-nav li a{
		border-width: 0;
}
