/*返回顶部的CSS*/
#retop{
	position:fixed;
	bottom:10%;
	_position:absolute;
	width:25px;
	height:69px;
	background:url(../images/topback.png) no-repeat;
	text-indent:-9em;
	overflow:hidden;
	display:none;
}	
